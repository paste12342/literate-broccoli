{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "aptPackages": ["curl", "git"]
        },
        "install": {
          "cmds": [
            "npm install -g pnpm",
            "pnpm install"
          ]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}
